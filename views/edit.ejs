<h1> Edit page</h1>

<form action="/movies/<%= post._id %>/edit?_method=PUT" method="post">
  <div class="form-group">
    <input class="form-control col-md-4" name="post[title]" value="<%= post.title %>">
  </div>
  <div class="form-group">
    <input class="form-control col-md-4" name="post[year]" value="<%= post.year %>">
  </div>
  <div class="form-group">
    <input class="form-control col-md-4" name="post[image]" value="<%= post.image %>">
  </div>
  <div class="form-group">
    <input class="form-control col-md-4" name="post[plot]" value="<%= post.plot %>">
  </div>
  <button class="btn btn-success">Update</button>
</form>
